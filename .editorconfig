# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# 4 spaces for indentation
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 4

# Trim trailing whitespace
[*]
trim_trailing_whitespace = true

# Use double quotes for JSON
[*.json]
quote_type = double
insert_final_newline = true

# Use single quotes for JavaScript/TypeScript
[*.{js,jsx,ts,tsx}]
quote_type = single

# Use semicolons for JavaScript/TypeScript
[*.{js,jsx,ts,tsx}]
insert_final_newline = true
end_of_line = lf
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Use single quotes for JSX attributes
[*.{js,jsx,ts,tsx}]
jsx_quotes = as-needed

# Use single quotes for HTML attributes
[*.{html,jsx,tsx}]
quote_type = single

# Use double quotes for CSS
[*.css]
quote_type = double

# Use double quotes for SCSS
[*.scss]
quote_type = double

# Use double quotes for Markdown
[*.md]
quote_type = double
